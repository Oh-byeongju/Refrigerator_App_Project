<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentInfo"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="제품명"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/et_p_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:inputType="text"
            android:ems="5"
            android:hint="제품명"
            android:textSize="17sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보관장소"
            android:textSize="20dp"/>

        <android.widget.Button
            android:id="@+id/storage1"
            android:layout_width="65dp"
            android:layout_height="43dp"
            android:layout_marginStart="34dp"
            android:background="@drawable/storage_border1"
            android:text="냉장"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <android.widget.Button
            android:id="@+id/storage2"
            android:layout_width="65dp"
            android:layout_height="43dp"
            android:background="@drawable/storage_border2_1"
            android:text="냉동"
            android:textSize="17dp" />

        <android.widget.Button
            android:id="@+id/storage3"
            android:layout_width="65dp"
            android:layout_height="43dp"
            android:background="@drawable/storage_border3_1"
            android:text="실온"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수량"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:backgroundTint="#429EFF"
            android:text="-"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="1"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="#429EFF"
            android:text="+"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록일"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/start"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:ems="5"
            android:hint="날짜 입력"
            android:inputType="text"
            android:maxLength="100"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:backgroundTint="#429EFF"
            android:text=""
            android:textSize="20sp"
            app:icon="@drawable/ic_calender" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유통기한"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/end"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:ems="5"
            android:hint="날짜 입력"
            android:inputType="text"
            android:maxLength="100"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:backgroundTint="#429EFF"
            android:text=""
            android:textSize="20sp"
            app:icon="@drawable/ic_calender" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="메모"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/memo"
            android:layout_width="235dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/edittext_rounded_corner_rectangle"
            android:ems="5"
            android:gravity="top"
            android:hint="메모"
            android:maxLength="100"
            android:paddingStart="7dp"
            android:paddingTop="3dp"
            android:textSize="17sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#429EFF"
        android:padding="10dp"
        android:text="저장"
        android:textSize="20sp" />
<!--
    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="냉장"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
        -->

</LinearLayout>